/*}*/

.unity-base-dropdown__item-content > .unity-base-dropdown__label {
    margin: 0;
    color: #3c3836;
}

.unity-base-dropdown__item > .unity-base-dropdown__label {
    margin: 0;
    color: #3c3836;
}

/* ==========================================
    Performance Monitor
/* ========================================== */
.dk-performance-monitor {
    position: absolute;
    right: 0;
    left: auto;
    background-color: var(--bg);
    min-width: 150px;
    max-width: 225px;
    padding: 0 2px 2px 2px;
    border-bottom-left-radius: 4px;
}

/* ==========================================
    Searchable Dropdown
/* ========================================== */
.dk-searchable-dropdown {
    background-color: var(--button);
    border-radius: 8px;
    border-width: 1px;
    border-color: transparent;
    height: 20px;
    min-height: 20px;
    justify-content: space-between;
    margin: 2px 0;
    padding-left: 4px;
}

.dk-searchable-dropdown:hover {
    border-width: 1px;
    border-color: var(--text-value);
}

.dk-searchable-dropdown:focus {
    border-width: 1px;
    border-color: var(--text-value);
}

.dk-searchable-dropdown__selected {
    flex-grow: 1;
}

.dk-searchable-dropdown__arrow {
    margin-left: 4px;
}

.dk-searchable-dropdown__popup {
    border-color: #555;
    background-color: #222;
    flex-direction:  column;
    border-width: 1px;
    border-radius: 4px;

    width: 100%;
    position: absolute;
    max-height: 250px;
    overflow: visible;
    flex-shrink: 1;
    flex-grow: 0;
    height: auto;
    color: #3c3836;
}

.dk-searchable-dropdown__search {
    margin-bottom: 2px;
}

.dk-searchable-dropdown__list {
    flex-grow: 0;
    flex-shrink: 1;
    height: auto;
    max-height: 200px;

    background-color: #d5c4a1;
    border-width: 2px;
    border-color: rgba(0,0,0, .1);
    border-radius: 4px;
    color: #3c3836;
}

.dk-searchable-dropdown__list .unity-label {
    color: #3c3836;
}

.dk-searchable-dropdown__item {
    padding-right: 6px;
    padding-top: 3px;
    padding-bottom: 3px;
}

