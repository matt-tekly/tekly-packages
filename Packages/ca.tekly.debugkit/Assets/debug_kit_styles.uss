/*    height: var(--line-height);*/
/*    min-height: var(--line-height);*/
/*    max-height: var(--line-height);*/
/*}*/


.unity-base-dropdown__item:checked {
    background-color: rgba(0,0,0,0.1);
}

.unity-base-dropdown__item-content {
    align-items: center;
}

